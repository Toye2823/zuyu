.companyShowTem
{
  width: 100%;
  height:100%;
  display:blcok;
  background:#fff;
}


.companyShowTem .shopInfo
{
  width:100%;
  height:60px;
  display: flex;
}
.companyShowTem .shopInfo .logo
{
  width:80px;
  height:100%;
  overflow: hidden;
}
.companyShowTem .shopInfo .logo image
{
  width:90%;
  margin:5px auto 0 auto;
}
.companyShowTem .shopInfo .shop
{
  width:100%;
}
.companyShowTem .shopInfo .shop .name
{
  font-size:18px;
  font-weight:700;
  height:40px;
  line-height:40px;
}
.companyShowTem .shopInfo .shop .time
{
  height:20px;
  line-height:20px;
  font-size:12px;
}
.companyShowTem .address
{
   width:100%;
   display: flex;
   height:40px;
   line-height:40px;
   border-top:1px solid #eee;
}
.companyShowTem .address .title
{
    font-size:14px;
    color:#333;
    padding:0 0 0 10px;
    width:80px;
}
.companyShowTem .address .txt
{
  font-size:14px;
   color:#333;
   overflow: hidden;
   width:100%;
}
.companyShowTem .address .openMap
{
  font-size:20px;
  color:#339999;
  width:80px;
  text-align: center;
  float: right;
  height:20px;
  margin:5px 0 0 0;
  border-left:1px solid #ccc;
}